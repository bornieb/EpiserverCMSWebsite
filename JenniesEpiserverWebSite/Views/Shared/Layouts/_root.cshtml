@using EPiServer.Core
@using EPiServer.Web.Mvc.Html
@model JenniesEpiserverWebSite.Models.ViewModels.SiteViewModelBase

@{
    var pageRouteHelper = EPiServer.ServiceLocation.ServiceLocator.Current.GetInstance<EPiServer.Web.Routing.IContentRouteHelper>();
    var currentPageLink = pageRouteHelper.ContentLink;
}

<!DOCTYPE html>
<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="~/Static/css/style.css">
</head>
<body>
    <header>
        <div class="container">
            <a href="@Url.ContentUrl(ContentReference.StartPage)">
                <img src="~/Static/Logos/MyCatLogo2.png" />
            </a>
            <ul class="headerlinks">
                @foreach (var item in Model.HeaderLinks.FilteredItems)
                {
    <li class="@(currentPageLink == item.ContentLink ? "active" : "")">
        @Html.ContentLink(item.ContentLink)
    </li>}
            </ul>
        </div>
    </header>
    @RenderBody()
    <footer>
        <br />
        <p>©My Cat Inc. 2021</p>
    </footer>
</body>
</html>